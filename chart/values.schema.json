{
  "$schema": "https://json-schema.org/schema#",
  "type": "object",
  "required": ["oauth", "security"],
  "properties": {
    "deployment": {
      "type": "object",
      "required": [],
      "properties": {
        "nodeSelector": {
          "type": "object",
          "additionalProperties" : {
            "type" : "string"
          }
        },
        "tolerations": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "key": {
                "type": "string"
              },
              "operator": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "effect": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "oauth": {
      "type": "object",
      "required": ["clientId", "clientSecret", "host"],
      "properties": {
        "clientId": {
          "type": "object",
          "required": ["secretName", "key"],
          "properties": {
            "secretName": {
              "type": "string",
              "minLength": 1
            },
            "key": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "clientSecret": {
          "type": "object",
          "required": ["secretName", "key"],
          "properties": {
            "secretName": {
              "type": "string",
              "minLength": 1
            },
            "key": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "scopes": {
          "type": "string",
          "minLength": 1
        },
        "host": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "security": {
      "type": "object",
      "required": ["userCookie", "hashingSecret", "allowedDomains"],
      "properties": {
        "userCookie": {
          "type": "object",
          "required": ["name", "domain"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "domain": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "hashingSecret": {
          "type": "object",
          "required": ["secretName", "key"],
          "properties": {
            "secretName": {
              "type": "string",
              "minLength": 1
            },
            "key": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "allowedDomains": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minLength": 1
        }
      }
    }
  }
}
